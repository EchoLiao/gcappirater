Pod::Spec.new do |s|
  s.name         = "GCAppirater"
  s.version      = "<%= version %>"
  s.summary      = "GC fork of Appirater."
  s.homepage     = "https://github.com/gamechanger/gcappirater.git"
  s.author       = { "Brian Bernberg" => "brian@gc.com" }
  s.source       = { :git => "https://github.com/gamechanger/gcappirater.git", :tag => "<%= version %>" }
  s.source_files = "*.{h,m}"
  s.frameworks = 'CFNetwork', 'SystemConfiguration'
  s.weak_framework = 'StoreKit'
  s.resources = "*.lproj"
  s.license = { :type => 'MIT', :type => 'LICENSE' }
  s.requires_arc = true
  s.ios.deployment_target = '8.0'
end
